<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_cheque">
    <t t-call="report.html_container">
        <!-- This report is (obviously) a work in progress -->
        <div class="page">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Issued Date</th>
                        <th>Due Date</th>
                        <th>Number</th>
                        <th>Payed to</th>
                        <th>Original Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="docs" t-as="l">
                        <td>
                            <p t-if="l.issued_date">
                                <span t-field="l.issued_date"/>
                            </p>
                        </td>
                        <td>
                            <p t-if="l.maturity_date">
                                <span t-field="l.maturity_date"/>
                            </p>
                        </td>
                        <td class="text-right"><span t-field="l.name"/></td>
                        <td class="text-right"><span t-field="l.payed_to.name"/></td>
                        <td class="text-right"><span t-field="l.original_amount"
                                                     t-field-options='{"widget": "monetary", "display_currency": "l.currency"}'/></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
</template>
</data>
</openerp>
