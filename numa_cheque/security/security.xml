<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- Multi - Company Rules -->

        <record model="ir.rule" id="cheque_rule">
            <field name="name">Document multi-company</field>
            <field name="model_id" ref="model_account_document"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company','=',False),('company','child_of',[user.company_id])]</field>
        </record>

        <record model="ir.rule" id="cheque_rule">
            <field name="name">Own Document multi-company</field>
            <field name="model_id" ref="model_account_payable_document"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company','=',False),('company','child_of',[user.company_id])]</field>
        </record>

    </data>
</openerp>
