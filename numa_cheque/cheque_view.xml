<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="receive_document_form" model="ir.ui.view">
            <field name="name">Receive documents form</field>
            <field name="model">account.receive_document</field>
            <field name="arch" type="xml">
                <form string="Receive documents" version="7.0">
                    <group>
                        <field name="docs" invisible="1" />
                        <field name="journal" 
                               domain="[('type','in',['sale'])]" 
                               on_change="onchange_journal(journal, receive_date)" />
                        <field name="receive_date" 
                               on_change="onchange_receive_date(receive_date, journal)" />
                        <field name="period" />
                        <field name="receive_account" />
                        <button name="action_receive_doc" 
                                string="Receive document" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="receive_document_action" model="ir.actions.act_window">
            <field name="name">Receive Documents</field>
            <field name="res_model">account.receive_document</field>
            <field name="src_model">account.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="cash_document_form" model="ir.ui.view">
            <field name="name">Cash documents form</field>
            <field name="model">account.cash_document</field>
            <field name="arch" type="xml">
                <form string="Cash documents" version="7.0">
                    <group>
                        <field name="docs" invisible="1" />
                        <field name="journal" 
                               domain="[('type','in',['bank', 'cash'])]" 
                               on_change="onchange_journal(journal, cash_date)" />
                        <field name="cash_date" 
                               on_change="onchange_cash_date(cash_date, journal)" />
                        <field name="period" />
                        <field name="cash_account" />
                        <button name="action_cash_doc" 
                                string="Cash document" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="cash_document_action" model="ir.actions.act_window">
            <field name="name">Cash Documents</field>
            <field name="res_model">account.cash_document</field>
            <field name="src_model">account.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="reject_document_form" model="ir.ui.view">
            <field name="name">Reject documents form</field>
            <field name="model">account.reject_document</field>
            <field name="arch" type="xml">
                <form string="Reject documents"  version="7.0">
                    <group>
                        <field name="docs" invisible="1" />
                        <button name="action_reject_doc" 
                                string="Reject document" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="reject_document_action" model="ir.actions.act_window">
            <field name="name">Reject Documents</field>
            <field name="res_model">account.reject_document</field>
            <field name="src_model">account.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="get_back_document_form" model="ir.ui.view">
            <field name="name">Get back documents form</field>
            <field name="model">account.get_back_document</field>
            <field name="arch" type="xml">
                <form string="Reject documents"  version="7.0">
                    <group>
                        <field name="docs" invisible="1" />
                        <button name="action_gb_doc" 
                                string="Get back document" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="get_back_document_action" model="ir.actions.act_window">
            <field name="name">Get back Documents</field>
            <field name="res_model">account.get_back_document</field>
            <field name="src_model">account.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="hand_out_document_form" model="ir.ui.view">
            <field name="name">Hand out documents form</field>
            <field name="model">account.hand_out_document</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Hand out documents" version="7.0">
                    <group>
                        <field name="docs" invisible="1" />
                        <field name="date" />
                        <field name="third_party" />
                        <button name="action_hand_out" 
                                string="Hand out documents" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="hand_out_document_action" model="ir.actions.act_window">
            <field name="name">Hand out Documents</field>
            <field name="res_model">account.hand_out_document</field>
            <field name="src_model">account.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="document_form" model="ir.ui.view">
            <field name="name">Document form</field>
            <field name="model">account.document</field>
            <field name="arch" type="xml">
                <form string="Valor" version="7.0">
                    <header>
                        <button name="action_complete"  type="object" states="draft" string="Data complete" />
                        <button name="action_back_to_draft"  type="object" states="data_complete" string="Back to draft" />
                        <button name="action_confirm"  type="object" states="data_complete" string="Confirm" />
                        <button name="action_cash"     type="object" states="receivable,third_party" string="Cash" />
                        <button name="action_reject"   type="object" states="receivable,third_party" string="Reject" />
                        <button name="action_get_back" type="object" states="receivable,third_party" string="Get back to customer" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,data_complete,receivable,cashed,rejected,third_party,canceled" statusbar_colors='{"rejected":"red","cashed":"blue","data_complete":"dark green"}'/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" placeholder="Number or ID"/>
                        </h1>
                        <field name="doc_type" placeholder="Document type"/>
                        <group>
                            <group string="Issuer">
                                <field name="received_from" on_change="onchange_received_from(received_from)"/>
                                <field name="issuer_account"
                                       context="{'default_partner_id': received_from}"/>
                                <field name="company" on_change="onchange_original_amount(original_amount, currency, company)"/>
                            </group>
                            <group string="Document info">
                                <field name="original_amount" on_change="onchange_original_amount(original_amount, currency, company)"/>
                                <field name="currency" on_change="onchange_original_amount(original_amount, currency, company)"/>
                                <field name="amount"/>
                                <field name="maturity_date"/>
                                <field name="transferable"/>
                                <field name="received_on_account"/>
                            </group>
                            <group string="State history">
                                <field name="received_on" readonly="1"/>
                                <field name="cashed_on" readonly="1"/>
                                <field name="passed_on" readonly="1"/>
                                <field name="rejected_on" readonly="1"/>
                                <field name="current_holder" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="document_tree" model="ir.ui.view">
            <field name="name">Document tree</field>
            <field name="model">account.document</field>
            <field name="arch" type="xml">
                <tree string="Documents">
                    <field name="received_from"/>
                    <field name="doc_type"/>
                    <field name="name"/>
                    <field name="issuer_account"/>
                    <field name="received_from"/>
                    <field name="currency"/>
                    <field name="original_amount"/>
                    <field name="amount"/>
                    <field name="maturity_date"/>
                    <field name="transferable"/>
                    <field name="received_on"/>
                    <field name="current_holder"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="document_search" model="ir.ui.view">
            <field name="name">Document search</field>
            <field name="model">account.document</field>
            <field name="arch" type="xml">
                <search string="Document">
                    <field name="name" />
                    <field name="doc_type" />
                    <field name="received_from"/>
                    <field name="company"/>
                    <field name="currency"/>
                    <field name="maturity_date"/>
                    <field name="transferable"/>
                    <field name="received_on"/>
                    <field name="cashed_on"/>
                    <field name="passed_on"/>
                    <field name="rejected_on"/>
                    <field name="current_holder"/>

                    <filter icon="terp-document-new" string="Draft" name="draft" domain="[('state','in',('draft'))]" help="Documents that haven't yet been confirmed"/>
                    <filter icon="terp-document-new" string="Receivable" name="draft" domain="[('state','in',('receivable'))]" help="Documents that have been cashed"/>
                    <filter icon="terp-document-new" string="Rejected" name="rejected" domain="[('state','in',('rejected'))]" help="Documents that have been rejected"/>
                    <filter icon="terp-document-new" string="Canceled" name="canceled" domain="[('state','in',('canceled'))]" help="Document that have been got back to customer"/>

                    <filter icon="terp-document-new" string="To cash" name="draft" domain="[('state','in',('receivable')),('maturity_date','%lt;',context_today()]" help="Receivable documents with maturity date before today"/>

                    <group expand="0" string="Group By...">
                        <filter string="Received from" icon="terp-personal" domain="[]" context="{'group_by':'receive_from'}"/>
                        <filter string="Current holder" icon="terp-personal" domain="[]" context="{'group_by':'current_holder'}"/>
                        <filter string="Transferable" icon="terp-personal" domain="[]" context="{'group_by':'transferable'}"/>
                        <filter string="Doc. Type" icon="terp-personal" domain="[]" context="{'group_by':'doc_type'}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Received on" icon="terp-go-month" domain="[]" context="{'group_by':'received_on'}"/>
                        <filter string="Cashed on" icon="terp-go-month" domain="[]" context="{'group_by':'cashed_on'}"/>
                        <filter string="Rejected on" icon="terp-go-month" domain="[]" context="{'group_by':'rejected_on'}"/>
                        <filter string="Passed on" icon="terp-go-month" domain="[]" context="{'group_by':'passed_on'}"/>
                        <filter string="Back to partner on" icon="terp-go-month" domain="[]" context="{'group_by':'back_to_partner_on'}"/>
                        <filter string="Company" icon="terp-personal+" domain="[]" context="{'group_by':'company'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="document_action" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="res_model">account.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="document_action" id="document_menu"
            parent="account.menu_finance_bank_and_cash" sequence="4"/>


        <!--
        ======================
        Company
        ======================
        -->
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">Company with Document settings form view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="numa_account.view_company_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@string='Accounting settings']/group[@name='Accounting']" position="inside">
                        <field name="nt_docs_account" />
                        <field name="t_docs_account" />
                        <field name="doc_reject_service" />
                        <field name="doc_reject_charge_service" />
                    </xpath>
                </data>
            </field>
        </record>


    </data>
</openerp>
