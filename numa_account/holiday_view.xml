<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="holiday_tree" model="ir.ui.view">
            <field name="name">Holiday tree</field>
            <field name="model">account.holiday</field>
            <field name="arch" type="xml">
                <tree string="Holidays" editable="bottom">
                    <field name="country"/>
                    <field name="date"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <record id="holiday_search" model="ir.ui.view">
            <field name="name">Holiday search</field>
            <field name="model">account.holiday</field>
            <field name="arch" type="xml">
                <search string="Holidays">
                    <field name="country" />
                    <field name="date" />
                    <field name="notes"/>
                    <group expand="0" string="Group By...">
                        <filter string="Country" icon="terp-personal" domain="[]" context="{'group_by':'country'}"/>
                        <filter string="Month" icon="terp-personal" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="holiday_action" model="ir.actions.act_window">
            <field name="name">Holidays</field>
            <field name="res_model">account.holiday</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>
        
        <menuitem action="holiday_action" id="holiday_menu"
            parent="account.menu_configuration_misc" sequence="8" />

    </data>
</openerp>
