<?xml version="1.0"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="quick_move_category_tree">
            <field name="name">Quick Move Categorytree</field>
            <field name="model">account.quick_move_category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Quick Move Category" editable="top">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="quick_move_category_action" model="ir.actions.act_window">
            <field name="name">Quick Move Category</field>
            <field name="res_model">account.quick_move_category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem action="quick_move_category_action" id="quick_move_category_menu"
            parent="account.menu_configuration_misc" sequence="6" />

        <record model="ir.ui.view" id="quick_move_tree">
            <field name="name">Quick Move tree</field>
            <field name="model">account.quick_move</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Quick Moves">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="category"/>
                    <field name="property_qm_debit_account"/>
                    <field name="property_qm_credit_account"/>
                    <field name="property_qm_analytic_account"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="quick_move_form">
            <field name="name">Quick Move form</field>
            <field name="model">account.quick_move</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Quick Move" version="7.0">
                    <sheet>
                        <h1>
                            <field name="name" colspan="1"/>
                        </h1>
                        <field name="type" colspan="1"/>
                        <group>
                            <field name="description"/>
                            <field name="category"/>
                        </group>
                        <group string="Accounts">
                            <field name="property_qm_debit_account" domain="[('type','!=','view')]" />
                            <field name="property_qm_credit_account" domain="[('type','!=','view')]" />
                            <field name="property_qm_analytic_account" domain="[('type','!=','view')]" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="quick_move_action" model="ir.actions.act_window">
            <field name="name">Quick Moves</field>
            <field name="res_model">account.quick_move</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="quick_move_action" id="quick_move_menu"
            parent="account.menu_configuration_misc" sequence="7" />

       
     </data>
</openerp>
