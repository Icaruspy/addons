<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
        ======================
        Credit Card Account
        ======================
        -->

        <record id="credit_card_account_form" model="ir.ui.view">
            <field name="name">Credit Card Voucher form</field>
            <field name="model">account.credit_card_account</field>
            <field name="arch" type="xml">
                <form string="Credit Card Account" version="7.0">
                    <header>
                        <button name="action_suspend"  type="object" states="active" string="Suspend" />
                        <button name="action_cancel"   type="object" states="active,suspended" string="Cancel" />
                        <button name="action_back_to_active"   type="object" states="suspended,canceled" string="Back to Active" />
                        <field name="state" widget="statusbar" statusbar_visible="active,suspended,canceled" statusbar_colors='{"suspended":"grey","canceled":"red"}'/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" placeholder="Name"/>
                            <field name="ref" placeholder="Reference" />
                        </h1>
                        <group name="General">
                            <field name="bank_account" />
                            <field name="receive_account" />
                            <field name="payed_after" />
                            <field name="commission_p" />
                            <field name="company" on_change="onchange_company(company)"/>
                        </group>
                        <group string="State history">
                            <field name="suspended_on" />
                            <field name="canceled_on" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="credit_card_account_tree" model="ir.ui.view">
            <field name="name">Credit Card Accountr tree</field>
            <field name="model">account.credit_card_account</field>
            <field name="arch" type="xml">
                <tree string="Credit Card Accounts">
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="company"/>
                    <field name="suspended_on"/>
                    <field name="canceled_on"/>
                </tree>
            </field>
        </record>

        <record id="credit_card_account_action" model="ir.actions.act_window">
            <field name="name">Credit Card Accounts</field>
            <field name="res_model">account.credit_card_account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="credit_card_account_action" id="credit_card_account_menu"
            parent="account.menu_finance_bank_and_cash" sequence="4"/>

        <!--
        ======================
        Credit Card Voucher
        ======================
        -->

        <record id="receive_credit_card_voucher_form" model="ir.ui.view">
            <field name="name">Receive credit card vouchers form</field>
            <field name="model">account.receive_ccv</field>
            <field name="arch" type="xml">
                <form string="Receive Credit Card Voucher" version="7.0">
                    <group>
                        <field name="ccvs" invisible="1" />
                        <field name="journal" 
                               domain="[('type','in',['sale'])]" 
                               on_change="onchange_journal(journal, receive_date)" />
                        <field name="receive_date" 
                               on_change="onchange_receive_date(receive_date, journal)" />
                        <field name="period" />
                        <button name="action_receive" 
                                string="Receive.credit_card_voucher" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="receive_credit_card_voucher_action" model="ir.actions.act_window">
            <field name="name">Receive Credit Card Vouchers</field>
            <field name="res_model">account.receive_ccv</field>
            <field name="src_model">account.credit_card_voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="cash_credit_card_voucher_form" model="ir.ui.view">
            <field name="name">Cash Credit Card Vouchers form</field>
            <field name="model">account.cash_ccv</field>
            <field name="arch" type="xml">
                <form string="Cash Credit Card Voucher" version="7.0">
                    <group>
                        <field name="ccvs" invisible="1" />
                        <field name="journal" 
                               domain="[('type','in',['bank', 'cash'])]" 
                               on_change="onchange_journal(journal, cash_date)" />
                        <field name="cash_date" 
                               on_change="onchange_cash_date(cash_date, journal)" />
                        <field name="period" />
                        <field name="cash_account" />
                        <button name="action_cash" 
                                string="Cash Credit Card Voucher" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="cash_credit_card_voucher_action" model="ir.actions.act_window">
            <field name="name">Cash Credit Card Vouchers</field>
            <field name="res_model">account.cash_ccv</field>
            <field name="src_model">account.credit_card_voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="reject_credit_card_voucher_form" model="ir.ui.view">
            <field name="name">Reject Credit Card Vouchers form</field>
            <field name="model">account.reject_ccv</field>
            <field name="arch" type="xml">
                <form string="Reject Credit Card Voucher" version="7.0" >
                    <group>
                        <field name="ccvs" invisible="1" />
                        <button name="action_reject" 
                                string="Reject Credit Card Voucher" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="reject_credit_card_voucher_action" model="ir.actions.act_window">
            <field name="name">Reject Credit Card Vouchers</field>
            <field name="res_model">account.reject_ccv</field>
            <field name="src_model">account.credit_card_voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="get_back_credit_card_voucher_form" model="ir.ui.view">
            <field name="name">Get back.credit_card_vouchers form</field>
            <field name="model">account.get_back_ccv</field>
            <field name="arch" type="xml">
                <form string="Get back Credit Card Voucher" version="7.0">
                    <group>
                        <field name="ccvs" invisible="1" />
                        <button name="action_gb" 
                                string="Get back Credit Card Voucher" 
                                type="object" icon="gtk-go-forward"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="get_back_credit_card_voucher_action" model="ir.actions.act_window">
            <field name="name">Get back Credit Card Vouchers</field>
            <field name="res_model">account.get_back_ccv</field>
            <field name="src_model">account.credit_card_voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="credit_card_voucher_form" model="ir.ui.view">
            <field name="name">Credit Card Voucher form</field>
            <field name="model">account.credit_card_voucher</field>
            <field name="arch" type="xml">
                <form string="Valor" version="7.0">
                    <header>
                        <button name="action_complete"  type="object" states="draft" string="Data complete" />
                        <button name="action_back_to_draft"  type="object" states="data_complete" string="Back to draft" />
                        <button name="action_confirm"  type="object" states="data_complete" string="Confirm" />
                        <button name="action_cash"     type="object" states="receivable,third_party" string="Cash" />
                        <button name="action_reject"   type="object" states="receivable,third_party" string="Reject" />
                        <button name="action_get_back" type="object" states="receivable,third_party" string="Get back to customer" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,data_complete,receivable,cashed,rejected,canceled" statusbar_colors='{"data_complete": "dark green",rejected":"red","cashed":"blue","canceled":"grey"}'/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group string="Issuer">
                                <field name="received_from"/>
                                <field name="cc_account"/>
                                <field name="company" on_change="onchange_original_amount(original_amount, currency, company)"/>
                            </group>
                            <group string="Credit Card Voucher info">
                                <field name="original_amount" on_change="onchange_original_amount(original_amount, currency, company)"/>
                                <field name="currency" on_change="onchange_original_amount(original_amount, currency, company)"/>
                                <field name="amount"/>
                                <field name="maturity_date"/>
                                <field name="received_on_account"/>
                            </group>
                            <group string="State history">
                                <field name="received_on" readonly="1"/>
                                <field name="cashed_on" readonly="1"/>
                                <field name="rejected_on" readonly="1"/>
                                <field name="got_back_on" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="credit_card_voucher_tree" model="ir.ui.view">
            <field name="name">Credit Card Voucher tree</field>
            <field name="model">account.credit_card_voucher</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Credit Card Vouchers">
                    <field name="received_from"/>
                    <field name="name"/>
                    <field name="cc_account"/>
                    <field name="currency"/>
                    <field name="original_amount"/>
                    <field name="amount"/>
                    <field name="maturity_date"/>
                    <field name="received_on"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="credit_card_voucher_search" model="ir.ui.view">
            <field name="name">Document search</field>
            <field name="model">account.credit_card_voucher</field>
            <field name="arch" type="xml">
                <search string="Document">
                    <field name="name" />
                    <field name="cc_account" />
                    <field name="received_from"/>
                    <field name="company"/>
                    <field name="currency"/>
                    <field name="maturity_date"/>
                    <field name="received_on"/>
                    <field name="cashed_on"/>
                    <field name="rejected_on"/>

                    <filter icon="terp-document-new" string="Draft" name="draft" domain="[('state','in',('draft'))]" help="CC Vouchers that haven't yet been confirmed"/>
                    <filter icon="terp-document-new" string="Receivable" name="draft" domain="[('state','in',('receivable'))]" help="CC Vouchers that have been cashed"/>
                    <filter icon="terp-document-new" string="Rejected" name="rejected" domain="[('state','in',('rejected'))]" help="CC Vouchers that have been rejected"/>
                    <filter icon="terp-document-new" string="Canceled" name="canceled" domain="[('state','in',('canceled'))]" help="CC Vouchers that have been got back to customer"/>

                    <filter icon="terp-document-new" string="To cash" name="draft" domain="[('state','in',('receivable')),('maturity_date','%lt;',context_today()]" help="Receivable CC Vouchers with maturity date before today"/>

                    <group expand="0" string="Group By...">
                        <filter string="Received from" icon="terp-personal" domain="[]" context="{'group_by':'receive_from'}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Received on" icon="terp-go-month" domain="[]" context="{'group_by':'received_on'}"/>
                        <filter string="Cashed on" icon="terp-go-month" domain="[]" context="{'group_by':'cashed_on'}"/>
                        <filter string="Rejected on" icon="terp-go-month" domain="[]" context="{'group_by':'rejected_on'}"/>
                        <filter string="Passed on" icon="terp-go-month" domain="[]" context="{'group_by':'passed_on'}"/>
                        <filter string="Back to partner on" icon="terp-go-month" domain="[]" context="{'group_by':'back_to_partner_on'}"/>
                        <filter string="Company" icon="terp-personal+" domain="[]" context="{'group_by':'company'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="credit_card_voucher_action" model="ir.actions.act_window">
            <field name="name">Credit Card Vouchers</field>
            <field name="res_model">account.credit_card_voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="credit_card_voucher_action" id="credit_card_voucher_menu"
            parent="account.menu_finance_bank_and_cash" sequence="5"/>


        <!--
        ======================
        Company
        ======================
        -->
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">Company with Credit Card Voucher settings form view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="numa_account.view_company_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@string='Accounting settings']/group[@name='Accounting']" position="inside">
                        <field name="cc_receive_account" />
                        <field name="cc_commission_account" />
                        <field name="cc_reject_service" />
                    </xpath>
                </data>
            </field>
        </record>


    </data>
</openerp>
