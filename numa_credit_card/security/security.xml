<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- Multi - Company Rules -->

        <record model="ir.rule" id="credit_card_voucher_multicompany_rule">
            <field name="name">Credit Card Voucher multi-company</field>
            <field name="model_id" ref="model_account_credit_card_voucher"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company','=',False),('company','child_of',[user.company_id])]</field>
        </record>

        <record model="ir.rule" id="credit_card_account_multicompany_rule">
            <field name="name">Credit Card Voucher multi-company</field>
            <field name="model_id" ref="model_account_credit_card_account"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company','=',False),('company','child_of',[user.company_id])]</field>
        </record>

    </data>
</openerp>
